<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Theme of the editor -->
    <style name="EditorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorAccent2</item>
    <item name="colorPrimaryDark">@color/top</item>
    <item name="colorAccent">@color/editorColorPrimary2</item>
</style>


    <style name="EditorThemex" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/top</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Theming Textfields.-->
    <style name="Theme.App" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="colorOnSurface">@color/design_default_color_background</item>
        <item name="colorError">@color/material_on_background_emphasis_medium</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>


    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">9dp</item>
    </style>

</resources>
